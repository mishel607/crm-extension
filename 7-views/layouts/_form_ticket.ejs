<form action="/tickets/form" method="post" class="lg-form">
  <div>
    <label for="ticketName">Ticket Name</label>
    <input type="hidden" name="id" value="<%= ticket %>" />
    <input
      type="text"
      name="ticketName"
      id="ticketName"
      value="<%= ticket.ticketName %>"
    />
  </div>

  <div class="form-group">
    <h5>Pipeline</h5>
    <input
      type="checkbox"
      id="pipeline"
      name="ticketPipeline"
      value="Warrany"
    />
    &nbsp;&nbsp;<strong>Warrany</strong>&nbsp;&nbsp;
    <input
      type="checkbox"
      id="pipeline"
      name="ticketPipeline"
      value="Sales"
    />&nbsp;&nbsp;<strong>Sales</strong>&nbsp;&nbsp;
    <input
      type="checkbox"
      id="pipeline"
      name="ticketPipeline"
      value="Marketing"
    />&nbsp;&nbsp;<strong>Marketing</strong>&nbsp;&nbsp;
    <input
      type="checkbox"
      id="pipeline"
      name="ticketPipeline"
      value="Implementation"
    />&nbsp;&nbsp;<strong>Implementation</strong>&nbsp;&nbsp;
  </div>

  <div>
    <p>
      <input class="with-gap" type="radio" name="ticketStatus" id="New"
      value="New" <%= ticket.ticketStatus == 'New' ? 'checked' : '' %> />
      <label for="New">New</label>
    </p>
    <p>
      <input class="with-gap" type="radio" name="ticketStatus" id="Closed"
      value="Closed" <%= ticket.ticketStatus == 'New' ? 'checked' : '' %> />
      <label for="Closed">Closed</label>
    </p>
  </div>

  <div>
    <label for="description">Ticket Description</label>
    <textarea
      placeholder="Enter description"
      name="description"
      rows="6"
      cols="60"
    >
    <%= ticket.description%>
    </textarea>
  </div>

  <div>
    <input type="submit" value="Save" />
  </div>
</form>
